  "devDependencies": {
    "@swc/core": "1.3.77",
    "@tauri-apps/cli": "^1.4.0",
    "@types/node": "20.5.0",
    "@types/uuid": "^9.0.2",
    "@walidoux/eslint-config": "1.0.9",
    "@walidoux/prettier-config": "1.0.4",
